<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_activity_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="famaf.unc.edu.ar.redditreader.NewsActivityFragment"
    tools:showIn="@layout/activity_news">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headReddit"
        android:text="r/todayilearned     Hace 4h"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagenReddit"
        android:src="@mipmap/reddit_icon"
        android:layout_below="@+id/headReddit"
        android:layout_toLeftOf="@+id/headReddit"
        android:layout_toStartOf="@+id/headReddit"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:textSize="11sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/centerReddit"
        android:layout_below="@+id/headReddit"
        android:layout_toRightOf="@+id/imagenReddit"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec"
        android:layout_alignRight="@+id/headReddit"
        android:layout_alignEnd="@+id/headReddit"
        android:textSize="17sp"/>

</RelativeLayout>